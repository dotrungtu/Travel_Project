<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/card_bg"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_BookingSaPa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_HotelNameSaPa"
        android:layout_width="wrap_content"
        android:hint="Tên khách sạn"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/img_BookingSaPa"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tv_AreaSaPa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:hint="Khu vực"
        app:layout_constraintStart_toStartOf="@+id/tv_HotelNameSaPa"
        app:layout_constraintTop_toBottomOf="@+id/tv_HotelNameSaPa" />

    <TextView
        android:id="@+id/tv_PriceBookingSaPa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:hint="Giá tiền"
        android:textColor="#FF0000"
        app:layout_constraintStart_toStartOf="@+id/tv_AreaSaPa"
        app:layout_constraintTop_toBottomOf="@+id/tv_AreaSaPa" />

</android.support.constraint.ConstraintLayout>
