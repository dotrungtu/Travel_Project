<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".DetailsTourWasBooked_Activity"
android:padding="8dp"
android:orientation="vertical">

<TextView
    android:id="@+id/tvTitleTour"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="CHI TIẾT TOUR"
    android:textStyle="bold"
    android:textSize="28dp"
    android:gravity="center"
    tools:ignore="MissingConstraints"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<ImageView
    android:id="@+id/imageView3_DetailsBookTour"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/tvTitleTour" />

<TextView
    android:id="@+id/textView6_NameCityBookTour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:textColor="#020202"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView3_DetailsBookTour" />

<TextView
    android:id="@+id/textView8_DetailsBookTour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="Ngày khởi hành :"
    android:textColor="#044363"
    android:textSize="17sp"
    app:layout_constraintStart_toStartOf="@+id/textView6_NameCityBookTour"
    app:layout_constraintTop_toBottomOf="@+id/textView6_NameCityBookTour" />

<TextView
    android:id="@+id/textView9_DetailsBookTour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:text="Giá dao động từ: "
    android:textColor="#044363"
    android:textSize="17sp"
    app:layout_constraintStart_toStartOf="@+id/textView8_DetailsBookTour"
    app:layout_constraintTop_toBottomOf="@+id/textView8_DetailsBookTour" />

<TextView
    android:id="@+id/textView10_DetailsBookTour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:textColor="#FF0000"
    android:textSize="17sp"
    app:layout_constraintBottom_toBottomOf="@+id/textView8_DetailsBookTour"
    app:layout_constraintStart_toEndOf="@+id/textView8_DetailsBookTour"
    app:layout_constraintTop_toTopOf="@+id/textView8_DetailsBookTour" />

<TextView
    android:id="@+id/textView12_DetailsBookTour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="Hình Ảnh"
    android:textColor="@android:color/background_dark"
    app:layout_constraintStart_toStartOf="@+id/textView9_DetailsBookTour"
    app:layout_constraintTop_toBottomOf="@+id/textView9_DetailsBookTour" />

<TextView
    android:id="@+id/textView11_DetailsBookTour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:textColor="#FF0000"
    android:textSize="17sp"
    app:layout_constraintBottom_toBottomOf="@+id/textView9_DetailsBookTour"
    app:layout_constraintStart_toEndOf="@+id/textView9_DetailsBookTour"
    app:layout_constraintTop_toTopOf="@+id/textView9_DetailsBookTour" />

<ImageView
    android:id="@+id/imageView8_DetailsBookTour"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:scaleType="fitXY"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView12_DetailsBookTour" />

<ImageView
    android:id="@+id/imageView9_DetailsBookTour"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginStart="8dp"
    android:scaleType="fitXY"
    app:layout_constraintBottom_toBottomOf="@+id/imageView8_DetailsBookTour"
    app:layout_constraintStart_toEndOf="@+id/imageView8_DetailsBookTour"
    app:layout_constraintTop_toTopOf="@+id/imageView8_DetailsBookTour" />

<ImageView
    android:id="@+id/imageView10_DetailsBookTour"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginStart="8dp"
    android:scaleType="fitXY"
    app:layout_constraintBottom_toBottomOf="@+id/imageView9_DetailsBookTour"
    app:layout_constraintStart_toEndOf="@+id/imageView9_DetailsBookTour"
    app:layout_constraintTop_toTopOf="@+id/imageView9_DetailsBookTour" />

<TextView
    android:id="@+id/textView13_DetailsBookTour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:text="Thông tin chuyến đi:"
    android:textColor="@android:color/background_dark"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView8_DetailsBookTour" />

<TextView
    android:id="@+id/textView14_DetailsBookTour"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:textSize="17dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/textView13_DetailsBookTour"
    app:layout_constraintTop_toBottomOf="@+id/textView13_DetailsBookTour" />
</android.support.constraint.ConstraintLayout>
</ScrollView>